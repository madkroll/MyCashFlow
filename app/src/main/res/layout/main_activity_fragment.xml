<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <TextView
            android:text="@string/main_act_expense"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="26dp"
            android:onClick="onExpenseClick"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:background="@color/colorRedish" />

        <TextView
            android:text="@string/main_act_income"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textSize="26dp"
            android:onClick="onIncomeClick"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:background="@color/colorBluish" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_main_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>
</LinearLayout>

